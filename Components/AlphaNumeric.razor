@using LayoutDesigner.Interfaces
@implements ILayoutComponent

<MudCard inert="@(PreviewMode || DesignMode)">
	<MudCardHeader>
		@(PreviewMode ? "Speed" : Label)
	</MudCardHeader>
	<MudCardContent>
		@if (!PreviewMode)
		{
			<MudTextField @bind-Value="@Value" Required="true" />
		}
		else
		{
			<MudTextField Value="@("42.0")" Required="true" />
		}
	</MudCardContent>
</MudCard>

@code {
	[Parameter]
	public string Label { get; set; }

	[Parameter]
	public double Value { get; set; }

	[Parameter]
	public bool PreviewMode { get; set; }
	
	[Parameter] 
	public bool DesignMode { get; set; }
}
